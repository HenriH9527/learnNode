extends layout

block content
  div.container-fluid='登录页'
    form.form-horizontal(method="post")
      fieldset
        legend='用户登录'
        !{message}
        div.control-group
          label.control-label(for="username")='用户名'
          div.controls
            input.input-xlarge(type="text" id="username" name="username")
        div.control-group
          label.control-label(for="password")='密码'
          div.controls
            input.input-xlarge(type="text" id="password" name="password")
        div.form-actions
          button.btn.btn-primary(type="submit")="登录"

